{% extends "base.njk" %}
{% block extraStyle %}
<link rel="stylesheet" href="/css/index.css">
{% endblock %}
{% block header %}
  <div class="main-menu">
    <h1 class="title"> {{ title }} </h1>
    <p class="center-text"> {{ simpleDescription }} </p>
  </div>
{% endblock %}
{% block mainContent %}
  <div class="center-display">
    <ul>
      <li>
        <h2 class="year-title"> 2024 </h2>
      </li>
    {%- for post in collections.post | reverse -%}
      <li class="blog-post-title"> 
        <p> {{post.data.dayMonth}}:</p>
        <a href="{{ post.url }}"> {{ post.data.blogTitle }} </a>
      </li>
    {%- endfor -%}
    </ul>
  </div> 
{% endblock %}